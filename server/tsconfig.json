{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"typeRoots": ["./node_modules/@types", "./src/types"],
		"strictNullChecks": true
	},
	"lib": ["es2015"],
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "src/static"]
}
